{
  "name": "hero-vue",
  "version": "0.3.8",
  "type": "module",
  "description": "Library of (VUE) components to be used in HERO JavaScript apps",
  "author": {
    "name": "Matthijs van der Burgh",
    "email": "MatthijsBurgh@outlook.com"
  },
  "scripts": {
    "dev": "web-dev-server --node-resolve --open /dev/ --watch",
    "prebuild": "npm run lint",
    "build": "npm run build:es && npm run build:ssr && npm run build:unpkg",
    "build:es": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format es",
    "build:ssr": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format cjs",
    "build:unpkg": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format iife",
    "test:unit": "vitest",
    "test": "npm run test:unit",
    "lint": "eslint --ext .js,.ts,.vue src dev tests",
    "major": "npm version major",
    "minor": "npm version minor",
    "patch": "npm version patch",
    "version": "npm run build",
    "postversion": "git push && git push --tags"
  },
  "main": "dist/hero-vue.ssr.js",
  "module": "dist/hero-vue.esm.js",
  "browser": "dist/hero-vue.esm.js",
  "unpkg": "dist/hero-vue.min.js",
  "files": [
    "dist/*",
    "src/**/*.vue",
    "src/**/*.ts"
  ],
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.0",
    "@fortawesome/free-solid-svg-icons": "^6.5.0",
    "@fortawesome/vue-fontawesome": "^3.0.0",
    "bootstrap": "^5.3.0",
    "roslib": "^1.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.0.0",
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-replace": "^5.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^12.0.0",
    "@sinonjs/fake-timers": "^13.0.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/ui": "^4.0.16",
    "@vue/test-utils": "^2.4.0",
    "@web/dev-server": "^0.4.6",
    "auto-ros": "^1.0.0",
    "chai": "^5.0.0",
    "cross-env": "^7.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "happy-dom": "^20.1.0",
    "postcss": "^8.5.6",
    "rollup": "^4.0.0",
    "rollup-plugin-esbuild": "^6.2.1",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-vue": "^6.0.0",
    "sass": "^1.97.2",
    "tslib": "^2.8.1",
    "typescript": "^5.0.0",
    "vitest": "^4.0.16",
    "vue": "^3.4.0",
    "vue-tsc": "^2.0.0"
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  },
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tue-robotics/hero-vue.git"
  }
}
